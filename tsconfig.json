{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": true
  },
  "include": [
    "src/**/*",
    "demo/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}


